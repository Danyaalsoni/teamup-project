<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Title:" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name of Event"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="0.01"
                app:srcCompat="@mipmap/ic_people_black_24dp" />

            <EditText
                android:id="@+id/etMaxNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:ems="10"
                android:hint="Enter Number of Members"
                android:inputType="number" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="32dp"
                android:layout_height="34dp"
                app:srcCompat="@mipmap/handball" />

            <Spinner
                android:id="@+id/spSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/sports"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_date_range_black_24dp" />

            <Button
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                android:hint="Event Date "
                android:paddingLeft="4dp"
                android:textAlignment="textStart"

                android:textSize="18sp" />

            <Button
                android:id="@+id/etStartTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                android:hint="Start Time "
                android:paddingLeft="4dp"
                android:textAlignment="textStart"

                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="    " />

            <Button
                android:id="@+id/etEndTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="160dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                android:hint="End Time "
                android:paddingLeft="4dp"
                android:textAlignment="textStart"

                android:textSize="18sp" />
            \
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="31dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_repeat_black_24dp"
                tools:srcCompat="@mipmap/ic_repeat_black_24dp" />

            <CheckBox
                android:id="@+id/chkRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Repeating Event" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_description_black_24dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="230dp"
                android:layout_height="97dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:hint="Description of event"
                android:inputType="textMultiLine" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>